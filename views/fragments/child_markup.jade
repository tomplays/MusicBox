div.inside_child(style="background:{{markup.child_options.block_color}}")

	div(ng-if="markup.subtype == 'doc_content_block'")
		h4(ng-if="markup.metadata")
			a(style="color:{{markup.child_options.title_color}}" , ng-bind-html="markup.metadata" , href="#{root_url}/doc/{{markup.doc_id.slug}}") 
		a(href="#{root_url}/doc/{{markup.doc_id.slug}}") 
			img.doc_thumb(ng-src="{{markup.doc_id.thumbnail}}")
		h3 
			a(style="color:{{markup.child_options.title_color}}" , href="#{root_url}/doc/{{markup.doc_id.slug}}") {{markup.doc_id.title}}
		h4 
			a(style="color:{{markup.child_options.title_color}}" , href="#{root_url}/doc/{{markup.doc_id.slug}}") Par {{markup.doc_id.username}}
				
		p
			a(style="color:{{markup.child_options.title_color}}", href="#{root_url}/doc/{{markup.doc_id.slug}}", ng-bind-html="markup.doc_id.excerpt")
	
	div(ng-if="markup.subtype == 'simple_page'")
		h4(ng-if="markup.metadata")
			a(style="color:{{markup.child_options.title_color}}" , ng-bind-html="markup.metadata" , href="#{root_url}/doc/{{markup.doc_id.slug}}")
		h3 
			a(style="color:{{markup.child_options.title_color}}" , href="#{root_url}/doc/{{markup.doc_id.slug}}") {{markup.doc_id.title}}	
		
	div(ng-if="markup.subtype == 'share_excerpt'")

		h5 {{markup.metadata}}
		div.sharer
			a(class="twitter-share-icon", ng-class="", href="https://twitter.com/intent/tweet?text={{markup.explicit_string}} {{doc.encoded_url}}")
				i.fa.fa-twitter

			a(href="https://www.facebook.com/sharer/sharer.php?u={{doc.encoded_url}}")
				i.fa.fa-facebook-square
			p 
				em {{markup.explicit_string}}

	span.icon_col
		i(class="fa fa-{{markup.type}} fa-{{markup.subtype}} editing_{{markup.editing}} selected_{{markup.selected}}",  ng-click="toggle_select_markup('click')", ng-dblclick="toggle_select_markup('dblclick')"  ) 

