// GO PROFILE Link
a.quick_tool_opener.menuicon.menuicon-user( href="/me/account" ng-if="userin.username !== '' ") 
	i.fa.fa-user( ) &nbsp; {{userin.username}}

// GO LOGIN link
a.quick_tool_opener.menuicon.menuicon-sign-in( href="/login?redirect_url=#{root_url}:#{port}/doc/{{doc.slug}}" ng-if="userin.username == '' ") 
	i.fa.fa-sign-in()




// DOC OPTIONS > toggle mode
a.quick_tool_opener.menuicon.menuicon-document(tooltip="{{render_config.i18n.CUSTOM.DOCUMENT.document_options}}" tooltip-placement="left" ng-if="doc_owner == true  || ui.secret " ng-click="toggle_render('doc_options')" ng-class="{'visible_yes': ui.renderAvailable_active =='doc_options'}") 
	i.fa.fa-cog() 


// edit > toggle mode
a.quick_tool_opener.menuicon.menuicon-editor(tooltip="edit" tooltip-placement="left" ng-if="(doc_owner == true  || ui.secret) && ui.renderAvailable_active =='read'" ng-click="toggle_render('editor')" ng-class="{'visible_yes': ui.renderAvailable_active =='editor'}") 
	i.fa.fa-pencil()


// edit > toggle mode
a.quick_tool_opener.menuicon.menuicon-editor(tooltip="edit" tooltip-placement="left" ng-if="(doc_owner == true  || ui.secret) && ui.renderAvailable_active !=='read'" ng-click="toggle_render('read')" ng-class="{'visible_yes': ui.renderAvailable_active =='read'}") 
	i.fa.fa-eye()


