// the document title, time, author... 
// + document options editor
div.doc_header()
	
	// ng-if="ui.renderAvailable_active !=='embed'"
	// p {{doc.doc_options.include_audio_autoplay.value}}
	// audio(id="video1" controls src="{{doc.doc_options.include_audio_file.value}}" type="audio/mpeg")
	h2(ng-bind-html="doc.doc_options.doc_notices_before_title.value")
	// h2(ng-bind-html="doc.doc_options.doc_notices_before_title.value+'&nbsp;'" , class="editing_{{ui.editing_doc_notices_before_title}}" , ng-dblclick="edit_doc_option('doc_notices_before_title')") 
		
	// .edit_field(ng-if="ui.editing_doc_notices_before_title")
		label Edit beforetitle
		input(ng-if="ui.editing_doc_notices_before_title", ng-model="doc.doc_options.doc_notices_before_title.value", name="doc.doc_options.doc_notices_before_title.value")
		a.btn_ok.float_right(ng-click="edit_doc_option('doc_notices_before_title')") Save
	h1(ng-if="test_draft(doc.title)" ng-click="edit_doc('title')")
		{{i18n.CUSTOM.DOCUMENT.default_title}}
		span.hint(tooltip="edit title") edit title
	
	h1(ng-hide="test_draft(doc.title)" ng-if="doc.doc_options.display_doc_title.value =='doc_header' || !doc.doc_options.display_doc_title.value", ng-dblclick="edit_doc('title')") {{doc.title}} &nbsp;
		
	.edit_field.float-block.w-100(ng-if="ui.editing_title")
		span.float-block
			label Edit "Title" 
			input(ng-model="doc.title")
		a.btn_ok.save_title(ng-click="edit_doc('title')") Save

	h3(ng-bind-html="doc.doc_options.doc_notices_after_title.value")

	// h3(ng-bind-html="doc.doc_options.doc_notices_after_title.value+'&nbsp;'" , class="editing_{{ui.editing_doc_notices_after_title}}" , ng-dblclick="edit_doc_option('doc_notices_after_title')") 
	// .edit_field(ng-if="ui.editing_doc_notices_after_title")
		label Edit "after Title"
		input(ng-if="ui.editing_doc_notices_after_title",   ng-model="doc.doc_options.doc_notices_after_title.value", name="doc.doc_options.doc_notices_after_title.value")
		a.btn_ok.float_right(ng-click="edit_doc_option('doc_notices_after_title')") Save
			
	time.head_left(ng-if="doc.doc_options.display_date.value =='doc_header' || !doc.doc_options.display_date.value") {{doc.formated_date}}&nbsp;
		span.published-header.hint(tooltip="{{doc.published}}" ng-click="expand_tools('published')", ng-if="doc.doc_owner == true  || ui.secret")
			i.fa.fa-eye-slash(ng-if="doc.published=='draft'") 
			i.fa.fa-eye(ng-if="doc.published=='public'") 

	
	div.head_left(ng-if="doc.doc_options.display_author.value =='doc_header' || !doc.doc_options.display_author.value ")
		div.post-author-info
			p {{i18n.CUSTOM.DOCUMENT.by_author}} 
				span(style="color:{{doc.user.color}};", class="post-author-name", rel="author") {{doc.user.username}} 

	div.sharer(ng-if="doc.published=='public' && (doc.doc_options.display_sharer.value =='doc_header' || !doc.doc_options.display_sharer.value)" )
		a(class="twitter-share-icon", ng-class="", href="https://twitter.com/intent/tweet?text={{doc.excerpt}} {{doc.encoded_url}}")
			i.fa.fa-twitter
		a(href="https://www.facebook.com/sharer/sharer.php?u={{doc.encoded_url}}")
			i.fa.fa-facebook-square